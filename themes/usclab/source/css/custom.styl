@import url('https://fonts.googleapis.com/css?family=Noto+Serif+TC:200,300,400,500,600,700,900,200i,300i,400i,500i,600i,700i,900i&display=swap');
@import url('https://fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i|PT+Serif:400,400i,700,700i&subset=latin,latin-ext');

primary = #0c80a1;

.container {
  @media (min-width: 1400px) {
    max-width: 960px;
  }

  @media (min-width: 1200px) {
    max-width: 960px;
  }
}

.title, h1, h2, h3, h4, h5, h6 {
  font-family: 'Noto Serif TC';
  font-weight: bold;
}

h1 {
  text-align: center;
  margin-bottom: 2rem;
}

h2 {
  margin-top: 2rem;
  margin-bottom: 1rem;
}

main:not(.home) {
  h2 {
    border-bottom: 1px solid grey;
    padding-bottom: 0.25rem;
  }
}

header {
  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .cover {
    padding-top: 3rem;
    padding-bottom: 2rem;

    .title {
      font-weight: bold;
      font-size: 2rem;
      color: #444444;
    }

    .subtitle {
      color: gray;
      font-family: 'PT Serif', Times, sans-serif;
    }
  }

  .navigation {
    background-color: #0c80a1;

    .navbar {
      padding: 0;

      a {
        color: white;
        padding: 1rem !important;
        font-weight: bold;

        &:hover {
          background-color: #085a72;
          color: white;
        }
      }

      .dot:after {
        color: #085a72;
        content: '\2022';
        display: inline;
        font-size: 1rem;
        line-height: 3.5rem;
      }

      .dropdown-menu {
        margin: 0;
        padding: 0;
        background-color: #0c80a1;
        min-width: unset;
        border: unset;
        border-radius: unset;
      }
    }
  }
}

.homecover {
  background-image: url('/images/home_cover.jpg');
  background-size: cover;
  background-position: center;
  min-height: 350px;
}

main {
  padding-top: 3rem;
  padding-bottom: 3rem;

  #datatable {
    th {
      white-space: nowrap;
    }

    img {
      max-width: 200px;
    }
  }
}

.homepic {
  padding-bottom: 75%;
  background-position: center;
  background-size: cover;
  margin-bottom: 1rem;
  margin-top: 1rem;
}

.pic {
  padding-bottom: 100%;
  background-position: center;
  background-size: cover;
}

.row {
  --bs-gutter-y: 1.5rem;
}

img {
  max-width: 100%;
}

.btn-primary {
  background-color: primary !important;

  &:hover, &:active, &:focus {
    opacity: 0.8;
  }
}

iframe {
  width: 100%;
  height: 60vh;
}

footer {
  background-color: primary;
  padding-top: 2rem;
  padding-bottom: 2rem;

  .cover {
    .title {
      font-weight: bold;
      font-size: 1.5rem;
      margin-bottom: 0;
    }

    .subtitle {
      font-family: 'PT Serif', Times, sans-serif;
    }
  }

  .info {
    p {
      margin-bottom: 0.5rem;
    }
  }
}

.dataTable {
  a {
    color: primary;
    text-decoration: none;
  }
}